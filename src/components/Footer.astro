<style>
  /* Estilos generales del Footer */
  .footer {
    background-color: #3182ce; /* Azul Corporativo */
    color: white;
    padding: 40px 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    text-align: center;
  }

  /* Contenido del Footer */
  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 30px;
    padding: 0px calc(15% - 20px);
    gap: 20px; /* Añadir un poco de espacio entre las secciones */
  }

  /* Secciones del Footer */
  .footer-section {
    flex: 1;
    min-width: 250px;
    padding: 20px;
    background-color: transparent; /* Fondo sutil para las secciones */
    border-radius: 8px;
    /* Sombra sutil */
    margin-bottom: 20px; /* Separación entre secciones */
  }

  .footer-section h3 {
    font-size: 1.2rem;
    margin-bottom: 15px;
    color: #fff;
    font-weight: bold;
    letter-spacing: 1px; /* Espaciado en los títulos */
  }

  .footer-section p,
  .footer-section ul {
    font-size: 0.9rem;
  }

  .footer-section p {
    margin-bottom: 10px;
  }

  .footer-section ul {
    list-style: none;
    padding-left: 0;
  }

  .footer-section li {
    margin-bottom: 8px;
  }

  .footer-section a {
    color: #fff;
    text-decoration: none;
    display: block;
  }

  .footer-section a:hover {
    text-decoration: underline;
    color: #fbbf24; /* Color dorado en hover */
  }

  /* Redes sociales */
  .social-links {
    display: flex;
    gap: 15px;
  }

  .social-icon {
    color: #fff;
    font-size: 1.5rem;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .social-icon:hover {
    color: #fbbf24; /* Color dorado en hover */
  }

  /* Footer inferior */
  .footer-bottom {
    text-align: center;
    border-top: 1px solid #fff;
    padding-top: 15px;
    font-size: 0.9rem;
    margin-top: 20px;
  }

  .footer-bottom p {
    margin: 0;
  }

  /* Responsividad */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
    }

    .footer-section {
      text-align: center;
      margin-bottom: 20px;
    }
  }
</style>
